.mondrian-with-controls {
  --controlOverlap: 20px;
  --textColor: #ffffff;

  width: 100%;
  height: 100%;

  .mondrian {
    padding-left: var(--controlOverlap);
    box-sizing: border-box;
  }

  .mondrian-controls {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    padding: 0 calc(var(--controlOverlap));
    background: rgba(255, 255, 255, 0.2);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.5);
    overflow: auto;
    display: grid;
    z-index: 1;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: auto;
    grid-template-areas: "color-picker-0 color-picker-1" "color-picker-2 color-picker-3" "color-picker-4 grid-color" "gap gap" "divider divider" "reset-settings reset-canvas" "export-png export-svg";
    transition: transform 0.6s ease-in-out;
    box-sizing: border-box;
    transform: translateX(calc(-100% + var(--controlOverlap)));

    * {
      font-family: 'Edwarstile Signature';
      font-size: 48px;
    }

    &::after {
      content: '';
      position: absolute;
      top: 50%;
      right: 4px;
      transform: translate(-50%, -50%);
      background-color: #ffffff;
      mix-blend-mode: difference;
      border-radius: 50%;
      width: 6px;
      aspect-ratio: 1;
    }

    &:hover {
      transform: translateX(0);
    }

    &>* {
      position: relative;
    }

    input {
      background: rgba(255, 255, 255, 0.2);
      border: none;
      width: 100%;
      height: 100%;
      color: var(--textColor);
      outline: none;
      transition: background 0.3s;
      box-sizing: border-box;
      padding: 10px;
    }

    input[type='color'] {
      padding: 0;

      &:hover {
        cursor: pointer;
      }

      &:focus {
        background: rgba(255, 255, 255, 0.3);
      }
    }

    button {
      background: rgba(255, 255, 255, 0.2);
      color: var(--textColor);
      border: none;
      padding: 10px;
      cursor: pointer;
      transition: background 0.3s, transform 0.2s;

      span {
        mix-blend-mode: difference;
        overflow: hidden;
      }

      &:hover {
        background: rgba(255, 255, 255, 0.3);
        transform: translateY(-2px);
      }

      &:disabled {
        background: rgba(255, 255, 255, 0.1);
        cursor: not-allowed;
      }
    }

    label {
      position: absolute;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: auto;
      text-align: center;
      pointer-events: none;
      box-sizing: border-box;
      color: var(--textColor);
      mix-blend-mode: difference;
      z-index: 1;
      width: 100%;
      height: 100%;
    }

    .grid-color {
      grid-area: grid-color;
    }

    .colors {
      grid-area: color-pickers;
    }

    .gap {
      grid-area: gap;
    }

    .divider {
      grid-area: divider;
    }

    .reset-settings {
      grid-area: reset-settings;
    }

    .reset-canvas {
      grid-area: reset-canvas;
    }

    .export-png {
      grid-area: export-png;
    }

    .export-svg {
      grid-area: export-svg;
    }
  }
}